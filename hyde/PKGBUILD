# Maintainer: Axilleas P <axilleas archlinux gr>

pkgname=hyde
pkgver=0.8.4
pkgrel=1
pkgdesc="A static website generator written in python."
url="http://hyde.github.com"
arch=('any')
license=('MIT')
depends=('python2-yaml' 'python2-jinja' 'python-markdown' 'python2-pygments' 'python2-commando' 'python2-smartypants' 'python2-argparse')
makedepends=('python2' 'python2-distribute')
replaces=(hyde-git)
source=(http://pypi.python.org/packages/source/h/hyde/hyde-$pkgver.tar.gz)
md5sums=('aee4f2befc3a381eb45c2b666b790376')

build() {
  cd ${srcdir}/$pkgname-$pkgver
  sed -i 's|#!python|#!/usr/bin/env python2|' distribute_setup.py
  python2 setup.py install --root="${pkgdir}" -O1
}
