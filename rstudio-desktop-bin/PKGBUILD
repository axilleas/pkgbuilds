# Maintainer: Axilleas Pi <axilleas at archlinux.gr>
pkgname=rstudio-desktop-bin
_pkgname=rstudio
pkgver=0.96.331
pkgrel=1
pkgdesc="A new integrated development environment (IDE) for R"
arch=('i686' 'x86_64')
url="http://www.rstudio.org/"
license=('custom')
depends=('r>=2.11.1' 'qtwebkit' 'shared-mime-info')
provides=('rstudio-desktop-bin')
conflicts=('rstudio-desktop-git' 'rstudio-desktop')
install="${pkgname}.install"

if [[ $CARCH == x86_64 ]]; then
  source=(http://download1.rstudio.org/$_pkgname-$pkgver-amd64.deb)
  md5sums=('682266b48bf4f29468765b4e0367e9f3')
elif [[ $CARCH == i686 ]] ; then 
  source=(http://download1.rstudio.org/$_pkgname-$pkgver-i386.deb)
  md5sums=('3217f10c47b8ae82a104fcf545c718af')
fi

package() {

	cd $srcdir
	tar xzpf data.tar.gz
	rm usr/lib/rstudio/bin/lib*.so.*
	install -dm755 $pkgdir/{opt/$_pkgname,usr/{share,bin}}
	sed -i 's|usr/lib|opt|' usr/share/applications/rstudio.desktop
	cp -R usr/lib/rstudio/* $pkgdir/opt/$_pkgname
	cp -R usr/share/* $pkgdir/usr/share/

	ln -s $pkgdir/opt/$_pkgname/bin/rstudio $pkgdir/usr/bin/rstudio
	install -D -m644 "usr/lib/rstudio/COPYING" "${pkgdir}/usr/share/licenses/${pkgname}/COPYING"

}



# vim:set ts=2 sw=2 et:


