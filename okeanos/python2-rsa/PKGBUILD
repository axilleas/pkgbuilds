pkgname=python2-rsa
_pkgname=rsa
pkgver=3.0.1
pkgrel=1
pkgdesc="Pure-Python RSA implementation"
arch=(any)
url="http://stuvel.eu/rsa"
license=('APACHE')
depends=('python2-pyasn1>=0.0.13')
makedepends=(python2-distribute)
source=(http://pypi.python.org/packages/source/r/$_pkgname/$_pkgname-$pkgver.zip)
md5sums=(605b0346d7b7bf33a8d231ab4d07da45)

build() {
	cd "$srcdir/$_pkgname-$pkgver"
	python2 setup.py install -O1 --root="$pkgdir"
}
